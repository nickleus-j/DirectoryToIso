<Window x:Class="DirectoryToIso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectoryToIso"
        mc:Ignorable="d"
        Title="Directory To Iso" Height="400" Width="800" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
        FontFamily="Segoe UI" FontSize="16"
        >
    <Grid Margin="6,0,0,2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="150" Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Directory To Archive" Grid.Column="0" Grid.Row="0"  />
        <TextBox x:Name="DirectoryBox" Grid.Column="1" Grid.Row="0" IsReadOnly="True" FontSize="18" MaxHeight="150" VerticalAlignment="Top" BorderBrush="#FF465A47" BorderThickness="2" MaxLines="999" FontFamily="Segoe UI Semilight"/>
        <Button Grid.Column="2" Grid.Row="0" Content="Select Directory" x:Name="DirectoryBtn" Click="DirectoryBtn_Click"  MaxHeight="150" FontFamily="Segoe UI Semibold"  Background="{x:Null}" BorderBrush="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"/>
        <TextBlock Text="Iso Destination" Grid.Column="0" Grid.Row="1" />
        <TextBox x:Name="IsoLocation" Grid.Column="1" Grid.Row="1" IsReadOnly="True" FontSize="18" MaxHeight="150" VerticalAlignment="Top" BorderBrush="#FF465A47" BorderThickness="2"  MaxLines="999" FontFamily="Segoe UI Semilight"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Set Location" x:Name="IsoBtn" Click="IsoBtn_Click" MaxHeight="150" FontFamily="Segoe UI Semibold"  Background="{x:Null}" BorderBrush="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Save Iso" Click="Button_Click" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"  />
        <TextBlock Text="" Grid.Column="1" Grid.Row="2" FontFamily="High Tower Text" FontSize="12" x:Name="SaveStatus"/>
    </Grid>
</Window>
