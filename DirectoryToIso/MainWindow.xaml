<Window x:Class="DirectoryToIso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectoryToIso"
        mc:Ignorable="d"
        Title="Directory To Iso" Height="400" Width="800" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
        FontFamily="Segoe UI" FontSize="16"
        >
    <Grid Margin="6,0,0,2" >
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="100" Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" MaxWidth="180"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBlock Text="Directory To Archive"  />
            <TextBox x:Name="DirectoryBox"  IsReadOnly="True" FontSize="18" MaxHeight="150" VerticalAlignment="Top" BorderBrush="#FF465A47" BorderThickness="2" MaxLines="999"  FontFamily="Cascadia Code"/>
        </StackPanel>
        
        <Button Grid.Column="2" Grid.Row="0" Content="Select Directory" x:Name="DirectoryBtn" Click="DirectoryBtn_Click"  MaxHeight="150" FontFamily="Segoe UI Semibold"  Background="{x:Null}" BorderBrush="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"/>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Iso Destination" />
            <TextBox x:Name="IsoLocation"  IsReadOnly="True" FontSize="18" MaxHeight="150" VerticalAlignment="Top" BorderBrush="#FF465A47" BorderThickness="2"  MaxLines="999" FontFamily="Cascadia Code"/>
        </StackPanel>
        
        <Button Grid.Column="2" Grid.Row="1" Content="Set Location" x:Name="IsoBtn" Click="IsoBtn_Click" MaxHeight="150" FontFamily="Segoe UI Semibold"  Background="{x:Null}" BorderBrush="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Save Iso" Click="Button_Click" Background="#FFF9EF84" BorderBrush="#FF70793B" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"  />
        <TextBlock Text="" Grid.Column="1" Grid.Row="2" FontFamily="High Tower Text" FontSize="12" x:Name="SaveStatus"/>
    </Grid>
</Window>
