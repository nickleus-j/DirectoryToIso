<Window x:Class="DirectoryToIso.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectoryToIso"
        mc:Ignorable="d"
        Title="Directory To Iso" Height="400" Width="800" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
    <Grid Margin="6,0,0,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="120" Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Directory" Grid.Column="0" Grid.Row="0" FontFamily="High Tower Text" FontSize="16" />
        <TextBox x:Name="DirectoryBox" Grid.Column="1" Grid.Row="0" IsReadOnly="True" FontSize="18" MaxHeight="120" VerticalAlignment="Top" BorderBrush="#FF465A47" BorderThickness="2"/>
        <Button Grid.Column="2" Grid.Row="0" Content="Select Directory" x:Name="DirectoryBtn" Click="DirectoryBtn_Click" />
        <TextBlock Text="Iso Destination" Grid.Column="0" Grid.Row="1" FontFamily="High Tower Text" FontSize="16" />
        <TextBox x:Name="IsoLocation" Grid.Column="1" Grid.Row="1" IsReadOnly="True" FontSize="18" MaxHeight="120" VerticalAlignment="Top" BorderBrush="#FF465A47" BorderThickness="2"  />
        <Button Grid.Column="2" Grid.Row="1" Content="Set Location" x:Name="IsoBtn" Click="IsoBtn_Click"/>
        <Button Grid.Column="2" Grid.Row="2" Content="Save Iso" Click="Button_Click" FontFamily="Lato Semibold" FontSize="20"  />
    </Grid>
</Window>
